function yy = idwt2_haar( yy )
%UNTITLED Summary of this function goes here
%   Detailed explanation goes here

% Get the size of x as (n x m)
[n, m] = size(xx);
% Create matrix to hold the answer
yy = zeros(n,m);
% First apply the DWT to the rows of x
for i=1:n
   row = xx(i,:);						% Get the i-th row
   row = dwt_haar(row, steps);	% Transform it
   yy(i,:) = row;						% Put into i-th column of y
end
% Now apply DWT to columns
for j=1:n
   col = yy(:,j)';						% Get the i-th column (as a row vector)
   col = dwt_haar(col, steps);	% Transform it
   yy(:,j) = col';						% Put back (as column) into i-th column of y
end
end

